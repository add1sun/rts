  ; --------------------------------------------------------------------------
  ; Basic information about the theme.
  ; --------------------------------------------------------------------------
name        = twofivemile
description = "Fixed width (960 pixels) theme with a right side bar region and 
               a bottom region. Designed with a single author blog in mind."
screenshot  = screenshot.png
core        = 6.x
engine      = phptemplate

  ; --------------------------------------------------------------------------
  ; A "[left]" region is provided even though the theme only provides a right
  ; sidebar. This is to handle switching from a theme that already has content
  ; in the left region (a common scenario). Content in a "[left]" region is
  ; rendered in the right sidebar above the any content that was in the
  ; "[right]" region. The descriptions for the "[left]" and "[right]" in the
  ; admin/build/blocks page read "Upper Sidebar" and "Lower Sidebar",
  ; respectively.
  ; --------------------------------------------------------------------------
regions[header]  = Header
regions[content] = Content
regions[left]    = Upper Sidebar
regions[right]   = Lower Sidebar
regions[bottom]  = Bottom Block Bar
regions[footer]  = Footer

  ; --------------------------------------------------------------------------
  ; Theme features.
  ; --------------------------------------------------------------------------
features[] = name
features[] = slogan
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links
features[] = mission
features[] = node_user_picture
features[] = comment_user_picture
features[] = logo

  ; --------------------------------------------------------------------------
  ; The theme's CSS files.
  ;
  ; See the Drupal 6 Theme Guide at http://drupal.org/node/171209 for details
  ; on overriding stylesheets.
  ; --------------------------------------------------------------------------
stylesheets[all][]    = reset.css
stylesheets[all][]    = text.css
stylesheets[screen][] = layout.css
stylesheets[screen][] = style.css
stylesheets[screen][] = core.css
stylesheets[print][]  = print.css

  ; --------------------------------------------------------------------------
  ; twofivemile's default settings for the theme. These can be controlled on the
  ; twofivemile configuration page: admin/build/themes/settings/twofivemile
  ; --------------------------------------------------------------------------
settings[twofivemile_header_image]           = "<random>"
settings[twofivemile_header_dir]             = ""
settings[twofivemile_header_spaces]          = FALSE
settings[twofivemile_remove_not_verified]    = FALSE
settings[twofivemile_show_single_crumb]      = FALSE
settings[twofivemile_breadcrumb_separator]   = " &raquo; "
settings[twofivemile_link_separator]         = " | "
settings[twofivemile_suppress_comment_reply] = FALSE
settings[twofivemile_show_datestamp][]       = "blog"
settings[twofivemile_show_datestamp][]       = "forum"
settings[twofivemile_show_datestamp][]       = "poll"
settings[twofivemile_show_datestamp][]       = "story"
